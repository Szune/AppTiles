<Window x:Class="AppTiles.Windows.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppTiles.Windows"
        mc:Ignorable="d"
        Title="NoteWindow" MinWidth="100" MinHeight="120" Width="300" Height="300" PreviewKeyDown="NoteWindow_OnPreviewKeyDown" Closing="NoteWindow_OnClosing" SizeChanged="NoteWindow_OnSizeChanged">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BtnSave" Content="Save &amp; Close" Grid.Row="0" Click="BtnSave_OnClick"></Button>
    </Grid>
</Window>
